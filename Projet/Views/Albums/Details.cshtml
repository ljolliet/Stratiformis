@model Projet.Album

@{
    ViewBag.Title = "Details";
}

    <h2>Détails</h2>
    <h1>Albums</h1>

<div>
    

    <dl class="dl-horizontal">

        <dt>
            Titre
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Titre_Album)
        </dd>

        <dt>
            Année
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Annee_Album)
        </dd>
        <dd>
             <img src=@Url.Action("Pochette", "Albums", new { id = Html.DisplayFor(model => model.Code_Album)   }) />
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ASIN)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ASIN)
        </dd>

        <dt>
            Editeur
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Editeur.Nom_Editeur)
        </dd>

        <dt>
            Genre
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Genre.Libelle_Abrege)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Morceaux", "ListeEnregistrements", "Albums", new { id = Model.Code_Album }, null) </br>
    @Html.ActionLink("Album Précédent", "Details", new { id = Model.Code_Album - 1 }) |
    @Html.ActionLink("Album Suivant", "Details", new { id = Model.Code_Album + 1 })
</p>